<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Don-Forum</h1>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit something</a>
    <hr>
    <%if(posts.length < 8){%>
      <%posts.forEach(function(post){%>
        <div class="">
          <h4><%= post.post %></h4>
          <p>Poster: Anonymous</p>
        </div>
        <hr>
      <%});%>
      <%if(nextPage > 2){%>
        <a href=<%="/posts/"+previousPage%>>Previous</a>
        <%}%>
    <%} else {%>
      <%posts.forEach(function(post){%>
        <div class="">
          <h4><%= post.post %></h4>
          <p>Poster: Anonymous</p>
        </div>
        <hr>
      <%});%>
      <%if(nextPage > 2){%>
        <a href=<%="/posts/"+previousPage%>>Previous</a>
      <%}%>
      <a href=<%="/posts/"+nextPage%>>Next</a>
    <%}%>
    <hr>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  </div>
</div>

<%- include('partials/footer') %>
